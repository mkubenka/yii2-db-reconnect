{
    "name": "mkubenka/yii2-db-reconnect",
    "description": "Yii2 DB Auto Reconnect",
    "type": "yii2-extension",
    "keywords": ["yii2", "db", "mysql"],
    "license": "MIT",
    "homepage": "https://github.com/mkubenka/yii2-db-reconnect",
    "authors": [
        {
            "name": "Michal Kubenka",
            "homepage": "https://github.com/mkubenka"
        }
    ],
    "autoload": {
        "psr-4": {
            "mkubenka\\dbreconnect\\": "src/"
        }
    },
    "require-dev": {
        "yiisoft/yii2": "~2.0.12",
        "phpunit/phpunit": "~6.3.1"
    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset": {
            "vcs-driver-options": {
                "github-no-api": true
            }
        }
    }
}
